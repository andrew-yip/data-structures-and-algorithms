package HW07StacksandQueues;

import java.util.Arrays;
import java.util.Stack;

public class Problem1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Stack<String> s1 = new Stack<String>(); // made a new stack
		Stack<String> restored1 = new Stack<String>(); // restored
		String input = "Twinkle twinkle little star. How I wish I was where you are.";
		System.out.println(input);

		// splitting by putting in an array
		String[] arr = input.split(" "); // splitting the string with spaces

		System.out.println(Arrays.toString(arr));
		for (int i = 0; i < arr.length; i++) {

			if (i == 0) { // first one going in the stack is lower case
				String str1 = arr[i].substring(0, 1).toLowerCase() + arr[i].substring(1); // first one is lower
				if (str1.contains(".")) {
						str1 = arr[i].substring(0, 1).toUpperCase() + arr[i].substring(1); // always upper case
					}
					s1.push(str1); // putting that first in the stack
				}

				else if (i == arr.length - 1) { // if it is the last one
					String str1 = arr[i].substring(0, 1).toUpperCase() + arr[i].substring(1); // makes first upper
					if (str1.contains(".")) {
						str1 = arr[i].substring(0, 1).toUpperCase() + arr[i].substring(1, str1.length() - 1);
					}
				// pushing it onto stack
				s1.push(str1); // puts in stacks
			} 	else 	{
					// otherwise just push it onto the stack
					String str1 = arr[i].substring(0);

					if (str1.contains(".")) {
						str1 = arr[i].substring(0, 1).toUpperCase() + arr[i].substring(1);
					}
					s1.push(str1);
				}
			}

		System.out.println();

		// printing and putting back & not destroying the stack
		String word;
		while (!s1.isEmpty()) { // how to print the list
			word = s1.pop();
			restored1.push(word); // once popped add it to 'resotred' stack
			System.out.print(word + " ");
		}

		while (!restored1.isEmpty()) { // this puts it back in
			s1.push(restored1.pop());
		}

	}

}
